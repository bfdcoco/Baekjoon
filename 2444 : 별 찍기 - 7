#include<iostream>
using namespace std;

int main() {
    int input;
    cin >> input;
    for (int i = 1; i < input+1; i++) {
        for (int j = 0; j < input - i; j++) {
            cout << " ";
        }
        for (int j = 0; j < i*2-1; j++) {
            cout << "*";
        }
        cout << endl;
    }
    for (int i = 0; i < input + 1; i++) {
        for (int j = 0; j < i+1; j++) {
            cout << " ";
        }
        for (int j = 0; j < input*2 - i*2 - 3; j++) {
            cout << "*";
        }
        cout << endl;
    }

    return 0;
}
